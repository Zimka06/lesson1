#include <stdio.h>
#include <iostream>
#include <math.h>
int main()
{
	int c = 0;//первый счетчик(счетчик нулевых элементов)
    int x = 0;//второй счетчик(счетчик строк, без нулевых элементов)
	const int n = 4;//глобальная переменная, при задании массива
    const int m = 3;//глобальная переменная, при задании массива
	int a[n][m] = {1,0,1,
				   1,1,1,
				   2,0,2,
                   3,0,3};
    for (int i = 0; i < n; i++)//проход по строкам
    {
        x = 0;
        for (int j = 0; j < m; j++)//проход по столбцам
            if (a[i][j] == 0)//проверка на нулевой элемент 
                x++;//запоминаем эти нулевые элементы 
        if (x == 0)//если кол-во нулевых элементов равно 0
            c++;//добавляем эту строку если выполнено условие выше
    }
	printf("%d", c);//выводим кол-во строк, в которых нет нулевых элементов
}
