int maxCh(int* arr, int n)
{
	int max1 = 0;
	for (int i = 0; i < n; i++)
	{
		if (arr[i] > max1)max1 = arr[i];
	}
	return max1;
}
int SeriyMax(int* arr, int n) {
	int l = 0;
	int k = 0;
	int max = 0;
	for (l; l < n; l++)
	{
		if (arr[l] == arr[l + 1]) k++;
		else
		{
			if (k > max)max = k;
		}
	}
	return max;
}
